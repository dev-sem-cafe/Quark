<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.qk.controller.Aside"
        fx:id="aside" styleClass="aside">
    <BorderPane>
        <left>
            <VBox fx:id="innerAside" spacing="10" alignment="TOP_CENTER">
                <BorderPane fx:id="marginLogo" styleClass="border-bottom">
                    <left>
                        <VBox spacing="10"
                              alignment="CENTER">
                            <ImageView styleClass="logo" fx:id="quarkImage"/>
                        </VBox>
                    </left>
                    <center>
                        <Text styleClass="big-text">Quark</Text>
                    </center>
                </BorderPane>
                <Label text="Menu" styleClass="subtitle"/>
                <Button fx:id="homeButton" text="Projetos" maxWidth="Infinity" styleClass="btn"/>
                <Button fx:id="settingsButton" text="Configurações" maxWidth="Infinity" styleClass="btn"/>
            </VBox>
        </left>
        <right>
            <Pane fx:id="dragHandle" styleClass="drag"/>
        </right>
    </BorderPane>
</VBox>
